<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ku.suu.test_ui.MainActivity"
    android:background="@drawable/back3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@drawable/back3">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:id="@+id/imageView"
            android:layout_marginTop="1dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon2"
            android:layout_weight="0.32" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="เริ่มต้นการทดสอบ"
            android:id="@+id/bt_start"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/bt_manu"
            android:layout_marginTop="30dp"
            android:background="@color/bt_bg_manu"
            android:textColor="@color/bt_cha_manu"
            android:onClick="onClickNext" />

        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:text="ดูผลการทดสอบย้อนหลัง"
            android:id="@+id/bt_history"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/bt_manu"
            android:background="@color/bt_bg_manu"
            android:textColor="@color/bt_cha_manu"
            android:layout_gravity="center_horizontal"
            android:onClick="onClickNext"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:text="ผู้จัดทำ"
            android:id="@+id/bt_about"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/bt_manu"
            android:background="@color/bt_bg_manu"
            android:textColor="@color/bt_cha_manu"
            android:layout_gravity="center_horizontal"
            android:onClick="onClickNext"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:text="ออกจากโปรแกรม"
            android:id="@+id/bt_exit"
            android:layout_marginTop="10dp"
            android:background="@color/bt_bg_manu"
            android:textSize="@dimen/bt_manu"
            android:textColor="@color/bt_cha_manu"
            android:layout_gravity="center_horizontal"
            android:onClick="onClickNext"/>

    </LinearLayout>

</RelativeLayout>
